{
  "printWidth": 100,
  "tabWidth": 4,
  "proseWrap": "never",
  "singleQuote": false,
  "semi": true,
  "bracketSpacing": true,
  "parser": "babel",
  "trailingComma": "all",
  "jsxBracketSameLine": false,
  "arrowParens": "always",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": { "parser": "typescript" }
    },
    {
      "files": "*.md",
      "options": { "parser": "markdown" }
    },
    {
      "files": "*.yml",
      "options": { "parser": "yaml" }
    },
    {
      "files": "*.json",
      "options": { "parser": "json", "printWidth": 80 }
    },
    {
      "files": "*.css",
      "options": { "parser": "css" }
    }
  ]
}